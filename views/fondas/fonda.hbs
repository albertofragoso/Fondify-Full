<div class="container">
  <div class="section">
    <div class="row">
      <div class="col s12 m12">
        <h3 >¡Bienvenid@, {{loggedUser.name}}! 😎</h3>
        <wired-button class="color-orange accent-4" onclick="location.href='/fonda/new-menu'">Agregar el menú de hoy</wired-button> 
        <wired-button class="yellow accent-4" onclick="location.href='/fonda/edit-menu'">Editar el menú de hoy</wired-button> 
        {{#if orders}}
        <h5 class="grey-text">Estas son las reservaciones de tu fonda hasta el momento: </h5>
      {{/if}}
      </div>
    </div>
    <div class="row">
      {{#unless orders}}
      <div class="col s12 m12">
        <h5 class="deep-orange-text accent-3">Nadie ha reservado en tu fonda hoy.</h5>
      </div>  
      {{/unless}}
      {{#each orders as |order|}}
      <div class="col s12 m4">
        <div class="card z-depth-3">
          <div class="card-content">
            <span class="card-title grey-text text-darken-4">{{order.user.name}}</span>
            {{#each order.menuUser as |menu|}}
              <h6>Menú {{@index}}</h6>
              <p><span class="grey-text">Primer tiempo:</span> {{menu.firstTime}}</p>
              <p><span class="grey-text">Segundo tiempo:</span> {{menu.secondTime}}</p>
              <p><span class="grey-text">Plato fuerte:</span> {{menu.main}}</p>
              <hr>
            {{/each}}
            <br>
            <p><span class="grey-text">⏲ Hora de reservación:</span> {{order.arrive}}</p>
            <br>
          </div>
        </div>
    </div>
    {{/each}}
  </div>
</div>